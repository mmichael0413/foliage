<div class="body additional-content {{hidden}}">
    <div class="pure-g">
        <h3 class="header col-8-12">Task</h3>
        <h3 class="header col-4-12">Duration</h3>
    </div>

    {{#each tasks}}
        <div class="item pure-g">
            <div class="col-8-12">{{name}}</div>
            <div class="col-4-12">{{duration}} minutes</div>
        </div>
    {{/each}}
</div>