<div class="pure-g">
	<div class="col-4-5 col-md-1-2">
		{{localizedUTCDate date}}
	</div>
	<div class="col-1-5 col-md-1-2">
		<form accept-charset="UTF-8" action="{{form_url}}" method="post">
			<input id="store_uuid" name="store_uuid" type="hidden" value="{{store_details.id}}">
			<input id="date" name="date" type="hidden" value="{{date}}">
			<input name="authenticity_token" value="{{auth_token}}" type="hidden">
			<button class="btn primary">
				Start Visit
			</button>
		</form>
	</div>
</div>
