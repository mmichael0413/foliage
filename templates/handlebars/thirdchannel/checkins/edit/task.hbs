<div class="body task">

    <div class="details">
        <div>{{type}}</div>
        <div>{{name}}{{#required}}<span class="subtle-instruction">*</span>{{/required}}</div>
        <div>{{topics}}</div>
    </div>

{{#if false}}
    {{#if duration}}
        <div class="requirements">
            <div><i class="ic ic_o-hours"></i> {{duration}} hrs</div>
        </div>
    {{/if}}
{{/if}}

    <form accept-charset="UTF-8" action="{{submission.url}}" method="post" class="checkin-action pull-right">
        <input id="authenticity_token" name="authenticity_token" value="{{auth_token}}" type="hidden">
        <input id="job_uuid" name="job_uuid" type="hidden" value="{{job_uuid}}">
        <input id="task_uuid" name="task_uuid" type="hidden" value="{{uuid}}">
        <input id="survey_uuid" name="survey_uuid" type="hidden" value="{{survey_uuid}}">
        <input id="topic_survey_id" name="topic_survey_id" type="hidden" value="{{topic_survey_id}}">
        <input id="packet_uuid" name="packet_uuid" type="hidden" value="{{packet_uuid}}"/>
    </form>

    <div class="indicator">
    {{#if_eq submission.status 'complete'}}
        <button class="btn light">
            <i class="ic ic_check"></i>
        </button>
    {{else}}
        <button class="btn primary">
            <i class="ic ic_start"></i>
        </button>
    {{/if_eq}}

    </div>

</div>
<div class="divider"></div>


