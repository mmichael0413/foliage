<div class="activity-holder">
    {{#if tasks}}
        <div class="tasks clearfix">
            <h3 class="tasks-label">Tasks:</h3>
            <div class="task-container">
                {{#tasks}}
                <a class="task-item {{#active}}active{{/active}}" href="{{href}}">
                    <div class="badge task-label col-md-1-2">{{title}}</div>
                    {{#has_summary}}<div class="task-info badge col-md-1-7"><i class="ic ic_feed-summary"/></div>{{else}}<span class="col-md-1-7"></span>{{/has_summary}}
                    {{#has_photos}}<div class="task-info badge col-md-1-7"><i class="ic ic_feed-photos"/></div>{{else}}<span class="col-md-1-7"></span>{{/has_photos}}
                    {{#has_alerts}}<div class="task-info badge col-md-1-7"><i class="ic ic_feed-alerts"/></div>{{else}}<span class="col-md-1-7"></span>{{/has_alerts}}
                </a>
                {{/tasks}}
            </div>
        </div>
    {{/if}}
    <div class="activity">
        <div class="activity-meta">
            {{> user_image user_image}}

            <div class="bar-body">
                {{#if_eq type "Checkin"}}
                <p>
                    <a href="{{location.profile_url}}">{{location.store}}</a>
                    , {{location.address}}
                </p>
                {{/if_eq}}
                {{#if_eq checkin_type "special_project"}}
                <p class="activity-special-project">
                    {{survey_title}}
                </p>
                {{/if_eq}}
                <p>
                    <span data-livestamp="{{created_at}}"></span> <span>({{formatSecondsToDate created_at}})</span>
                    by
                    <a href="/programs/{{current_program}}/profiles/{{user_id}}">{{user_name}}</a>
                </p>
            </div>
        </div>
        <div class="activity-content">
            {{#if_eq type "Checkin"}}
            {{#if_gt issue_length 0}}
                <div class="issues-found">
                    <h3>{{issue_length}} {{pluralize issue_length 'New Issue Found' 'New Issues Found'}}</h3>
                    <ul class="unstyled">
                        {{#each issues}}
                        <li>- {{label}}</li>
                        {{/each}}
                    </ul>
                    {{#if_gt issue_length 3}}
                    <a href="{{report_url}}" target="_blank"><span class="indicator">showing 3 of {{issue_length}}</span></a>
                    {{/if_gt}}
                </div>
            {{/if_gt}}
            {{/if_eq}}
            <div class="summary">
            {{#show_summary}}                
                <h3>{{../subject}}</h3>
                <p>{{{../content}}}</p>    
            {{else}}
                <h3>There is no Summary for this {{../name}}.</h3>
            {{/show_summary}}
            </div>
            
        </div>
        {{#if images}}
        <div class="activity-photos">

            <div class="carousel">
                {{#each images}}
                <div>
                    <div class="helper">
                        <img src="{{url}}" alt="{{label}}" class="img-responsive" onerror="this.src='{{../content_image_error_url}}'"/>
                    </div>
                    <div class="img-label">{{image_type}}</div>
                </div>

                {{/each}}
                {{#unless_eq images.length 1}}
                <a href="#" class="arrow arrow-left">
                    <span class="ic ic_left"></span>
                </a>
                <a href="#" class="arrow arrow-right">
                    <span class="ic ic_right"></span>
                </a>
                {{/unless_eq}}
            </div>

        </div>
        {{/if}}

        <div class="activity-status visible-xs">
            <span class="action">
                <span class="like-count" data-likecount="{{like_count}}">{{like_count}}</span> <span class="like-label">{{pluralize like_count 'Like' 'Likes'}}</span>
            </span>


            <span class="action">
                <span> {{comments_count}}  {{pluralize comments_count
                    'Comment' 'Comments'}}
                </span>
            </span>

        </div>

        <div class="activity-actions">
                <span class="action bold">
                    {{#if show_like_button}}
                    <a class="activity_like_button gray" data-id="{{activity_id}}" href="#">
                        Like
                    </a>
                    {{else}}
                     Liked
                    {{/if}}
                </span>
            <span class="action bold">
                {{#if is_following}}
                    <a class="activity_follow_button" data-id="{{activity_id}}" data-following="{{is_following}}" href="#">
                        Unfollow
                    </a>
                {{else}}
                    <a class="activity_unfollow_button" data-id="{{activity_id}}" data-following="{{is_following}}" href="#">
                        Follow
                    </a>
                {{/if}}
            </span>
            <span class="action bold">
                <a href="#" class="start-comment">Comment</a>
            </span>
            <span class="action bold link-color">
                 |
            </span>
            {{#if_eq type "Checkin"}}
                <span class="action bold">
                    <a href="{{report_url}}" target="_blank">Full Report</a>
                </span>
            {{/if_eq}}
            <span class="action bold">
            <a href="/programs/{{current_program}}/activities/{{activity_id}}" class="hidden-xs">View Activity</a>
                </span>
        </div>

        {{#if show-moderation}}
            <div class="moderation-actions  visible-xs">
                {{#if editable}}
                    <span class="action"><a href="{{editable}}">Edit Visit</a></span>
                {{/if}}

                {{#if hideable}}
                    <span class="action"><a href="#" class="hide-post">Hide Post</a></span>
                {{/if}}
            </div>
        {{/if}}
    </div>
    <div class="comment-holder {{#if_eq singleActivity false}}hidden-xs{{/if_eq}}">
        <div class="activity-status">
            <span class="action">
                <span class="like-count" data-likecount="{{like_count}}">{{like_count}}</span> <span class="like-label">{{pluralize like_count 'Like' 'Likes'}}</span>
            </span>

            {{#if_gt comments_count 3}}
            <span class="action">
                <a href="#" class="more-comments">View {{additional_comments}} More {{pluralize additional_comments
                    'Comment' 'Comments'}}
                </a>
            </span>
            {{/if_gt}}
        </div>
        <div class="comments">

        </div>

        {{#if current_user}}
        <div class="comment new-comment">


        </div>
        {{/if}}

        {{#if show-moderation}}
        <div class="moderation-actions">
            {{#if editable}}
            <span class="action"><a href="{{editable}}">Edit Visit</a></span>
            {{/if}}

            {{#if hideable}}
            <span class="action"><a href="#" class="hide-post">Hide Post</a></span>
            {{/if}}
        </div>
        {{/if}}
    </div>
</div>
