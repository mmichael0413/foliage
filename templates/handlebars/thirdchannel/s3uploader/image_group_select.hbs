<div class="holder">
    <div class="image">
        {{#if source}}
            <img src="{{source}}" alt="Image">
        {{else}}
            {{#if temp_location}}
                <img src="{{temp_location}}" alt="Image">
            {{/if}}
        {{/if}}
    </div>
    <div class="delete">
        <button class="btn primary"><i class="ic ic_x"></i><span>Delete Image</span></button>
    </div>
    <div class="group_label">
        <label>Label:</label>
        <select name="group_label">
            <option value="">Select corresponding before image label...</option>
        </select>
    </div>
    <div class="description">
        <label>Description:</label>
        <input type="text" name="label" value="{{label}}">
    </div>
</div>
