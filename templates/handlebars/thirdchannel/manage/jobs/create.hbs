<form class="job-request-form">
    <section class="section">
        <div class="store-list-container">
            <h4>Store(s)</h4>
            <div class="store-list"></div>
        </div>

        <div class="form-group">
            <label>Visit Type</label>
            <select class="survey_uuid" name="survey_uuid" required="required">
                {{#each surveys}}
                    <option name="survey_uuid" class="survey_uuid" value="{{this.uuid}}">{{this.title}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label>Duration</label>
            <select name="duration" class="duration">
                {{#each durationOptions}}
                    <option value="{{this.value}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label class="inline-label">
                <input type="checkbox" class="recommend_start_time" />
                Recommended Start Time
            </label>
        </div>

        <div class="start-time-container hide">
            <div class="form-group">
                <label>Start Time</label>
                <input type="text" name="start_time" class="start_time" />
            </div>

            <div class="form-group">
                <label>Timezone</label>
                <select name="timezone" class="timezone">
                    <option value="">Select timezone</option>
                    {{#each timezones}}
                        <option value="{{this.name}}">(GMT{{this.offset}}) {{this.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>

        <div class="form-group date-range-container">
            <label>Date Range <span>(To be performed on or within selected dates)</span></label>
            <div class="date-range-list"></div>
            <a href="#" class="add-date-range underline">+ Add Date Range</a>
        </div>

        <div class="form-group">
            <label>Featured Products <span>(Standard Vega demos feature one product)</span></label>
            <select class="survey_topic_uuids" name="survey_topic_uuids" multiple="multiple">
                {{#each surveyTopics}}
                    <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label>Notes</label>
            <textarea class="notes" name="notes"></textarea>
        </div>
    </section>

    <button type="submit" class="btn primary submit-job-request">Save</button>
    <a href="#" class="cancel-job-request light underline">Cancel</a>
</form>