{{#if rows}}
<div class="section">
  <table class="table">
    <thead>
      <tr>
        <th>Store Name</th>
        <th>Address</th>
      {{#if rows.0.distance}}
        <th>Distance</th>
      {{/if}}
      </tr>
    </thead>
    <tbody>
    {{#rows}}
      <tr>
        <td>
          <a href="{{ links.profile }}">{{name}}</a>
        {{#if links.schedule}}
          <a href="{{links.schedule}}" target="_blank" title="View Store Schedule"><i class="ic ic_calendar"></i></a>
        {{/if}}
        </td>
        <td>{{address}}</td>
      {{#if distance}}
        <td>{{distance}} miles</td>
      {{/if}}
      </tr>
    {{/rows}}
    </tbody>
  </table>
</div>
{{else}}
<div class="alert info">No stores are assigned.</div>
{{/if}}