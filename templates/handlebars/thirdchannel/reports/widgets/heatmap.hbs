<div class="widget {{config.widget_class}}">
    <p>{{{title}}}</p>
    <ul class="legend">
        {{#each config.legend}}
            <li><i class="fa fa-circle" style="color: {{this}}"></i> {{@key}}</li>
        {{/each}}
    </ul>
    <table class="heatmap">
        {{#each results.accounts}}
            <tr>
                <td class="heatmap-row-label">{{@key}}</td>
                {{#each this.data}}
                    <td class="entry" style="background-color: {{this.classification}}">{{this.value}}</td>
                {{/each}}
            </tr>
        {{/each}}
        <tr>
            <td></td>
            {{#each results.categories}}
               <td class="heatmap-column-label">{{this}}</td>
            {{/each}}
        </tr>
    </table>
</div>