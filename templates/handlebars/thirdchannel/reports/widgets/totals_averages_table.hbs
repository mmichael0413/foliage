<div class="widget totals-averages-table {{config.widget_class}}">
    <div>{{title}}</div>

    <div class="pure-g">
        <div class="col-1-3"></div>
        <div class="col-1-3">Total</div>
        <div class="col-1-3">Avg/Store</div>
    </div>

    {{#each results.data}}
    <div class="pure-g data-row">
        <div class="col-1-3"><span>{{label}}</span></div>
        <div class="col-1-3"><span>{{total}}</span></div>
        <div class="col-1-3"><span>{{average}}</span></div>
    </div>
    {{/each}}
</div>

