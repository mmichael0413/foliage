<div class="widget {{config.widget_class}}">
    <table class="chart range">
        <thead>
            <th colspan="2">{{title}}</th>
        </thead>
        {{#each results}}
            <tr>
                <td>{{this.label}}</td>
                <td>{{../config.prefix}}{{this.value}}{{../config.postfix}}</td>
            </tr>
        {{/each}}
    </table>
    {{#if show_view_list}}
        <a href="#" class="breakdown-link" tag="View Breakdown">View Breakdown</a>
    {{/if}}
</div>
