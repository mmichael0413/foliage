<div class="editor">
    <div class="header">
        <label>
            {{#if attributes.id}}Edit{{/if}}
            {{#unless attributes.id}}Create{{/unless}}
             Survey
        </label>
        {{> editControls this}}
    </div>
    <div class="section">
        <label>Name</label>
        <input type="text" name="title" placeholder="Please enter a name" value="{{attributes.title}}">
        <label>Type</label>
        <select name="survey_type" required data-placeholder="Choose a survey type">
            <option></option>
            {{#select attributes.survey_type}}
                {{#each lookUps.survey_type}}
                    <option value="{{@key}}">{{this}}</option>
                {{/each}}
            {{/select}}
        </select>
        <label>Request Before/After Images?</label>
        <select name="show_images" required data-placeholder="Choose an option">
            <option></option>
            {{#select attributes.show_images}}
                {{#each lookUps.show_images}}
                    <option value="{{@key}}">{{this}}</option>
                {{/each}}
            {{/select}}
        </select>
        <label>Require Before/After Images to be submitted with survey?</label>
        <select name="require_images" required data-placeholder="Choose an option">
            <option></option>
            {{#select attributes.require_images}}
                {{#each lookUps.require_images}}
                    <option value="{{@key}}">{{this}}</option>
                {{/each}}
            {{/select}}
        </select>
        <label>Request Additional Images?</label>
        <select name="show_additional_images" required data-placeholder="Choose an option">
            <option></option>
            {{#select attributes.show_additional_images}}
                {{#each lookUps.show_additional_images}}
                    <option value="{{@key}}">{{this}}</option>
                {{/each}}
            {{/select}}
        </select>
        <label>Require Additional Images to be submitted with survey?</label>
        <select name="require_additional_images" required data-placeholder="Choose an option">
            <option></option>
            {{#select attributes.require_additional_images}}
                {{#each lookUps.require_additional_images}}
                    <option value="{{@key}}">{{this}}</option>
                {{/each}}
            {{/select}}
        </select>
        <label>Descriptive text that will appear ahead of the "before" images prompt</label>
        <input type="text" name="before_images_description" placeholder="Please enter a description" value="{{attributes.before_images_description}}">
        <label>Descriptive text that will appear ahead of the "after" images prompt</label>
        <input type="text" name="after_images_description" placeholder="Please enter a description" value="{{attributes.after_images_description}}">
        <label>Descriptive text that will appear ahead of the additional "images" prompt</label>
        <input type="text" name="additional_images_description" placeholder="Please enter a description" value="{{attributes.additional_images_description}}">
    </div>
</div>







