<div class="answer-editor">
    <div class="answer-controls">
        <a href="#" class="save btn light round"><i class="ic ic_check"></i></a>
        <a href="#" class="cancel btn light round"><i class="ic ic_x"></i></a>
    </div>
    <div class="answer content">
        <input type="text" name="choice" placeholder="Enter answer" value="{{attributes.choice}}">
        <label>Does this choice cause the explanation field to appear?</label>
        <select name="triggers" data-placeholder="Choose one">
            <option></option>
            {{#select attributes.triggers}}
                {{#each lookUps.triggers}}
                    <option value="{{@key}}">{{this}}</option>
                {{/each}}
            {{/select}}
        </select>
        <input type="hidden" name="idx" value="{{attributes.idx}}">
    </div>
</div>
