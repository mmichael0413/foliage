<div class="survey" id="survey-{{attributes.id}}">
    {{#unless attributes.locked}}
        <div class="controls show">
            <a href="#" class="edit btn light round"><i class="ic ic_edit"></i></a>
        </div>
    {{/unless}}
    <h1>{{attributes.title}}</h1>
    <h2>{{ lockDisplay attributes.locked }} for editing</h2>
    <div class="children survey"></div>
    {{#unless attributes.locked}}
        <div class="controls child">
            <a href="#" class="add btn light solid"><i class="ic ic_add"></i> Add New Section</a>
        </div>
    {{/unless}}
</div>