<div class="section" id="section-{{attributes.id}}">
    {{> showControls this}}
    <h3>{{attributes.title}}</h3>
    <div class="children"></div>
    {{#unless attributes.locked}}
        <div class="controls child">
            <a href="#" class="add btn light solid"><i class="ic ic_add"></i> Add New Question</a>
        </div>
    {{/unless}}
</div>
