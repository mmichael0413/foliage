{{#each available}}
    <div class="filter-component" data-filter-param="{{filterId}}[]">
        <div class="filter-item">{{label}} <span class="expand-indicator"></span>
            {{#each ../applied }}
                {{#if_eq filterId ../filterId}}
                    {{#each items}}
                        <div class="active-filter">
                            <div class="btn default ic_check"></div>
                            <span>&nbsp;{{this.[0]}}</span>
                        </div>
                    {{/each}}
                {{/if_eq}}
            {{/each}}
        </div>
        <div class="filter-list">
            {{#each items}}
                <div class="filter-list-item" data-value="{{this.[1]}}">
                    <div class="btn default">&nbsp;</div>
                    <span>{{this.[0]}}</span>
                </div>
            {{/each}}
        </div>
    </div>
{{/each}}