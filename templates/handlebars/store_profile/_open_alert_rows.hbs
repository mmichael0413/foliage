{{#rows}}
	<div class="item pure-g alert-row">
		<p class="col-6-12 col-md-1-2">{{title}}</p>
		<p class="col-4-12 col-md-1-2">{{created_at}}</p>
		<div class="col-2-12">
			<a href="{{links.resolve}}" class="btn primary expand resolve-link"><i class="ic fa ic_check"></i></a>
			<a href="{{links.checkin}}" class="btn primary report-link"><i class="ic fa ic_report-16"></i></a>
		</div>
		
		{{> 'alert_details_empty_row'}}
	</div>
{{else}}
	<p>There are no Open Alerts for this Store</p>
{{/rows}}