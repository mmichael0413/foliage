{{#rows}}
	<div class="item pure-g alert-row">
		<p class="col-1-2 col-md-1">{{title}}</p>
		<p class="col-1-4 minor-m">{{created_at}}</p>
		<div class="col-1-4 col-md-1 alert-actions">
			<a href="{{links.resolve}}" class="btn primary expand resolve-link"><i class="ic fa ic_check"></i><span class="visible-md">Resolve Alert</span></a>
			<a href="{{links.checkin}}" class="btn primary report-link"><i class="ic fa ic_report-16"></i><span class="visible-md">View Report</span></a>
		</div>
		
		{{> 'alert_details_empty_row'}}
	</div>
{{else}}
	<p>There are no Open Alerts for this Store</p>
{{/rows}}