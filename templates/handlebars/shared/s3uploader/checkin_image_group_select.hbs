<div class="holder">
    <div class="image">
        {{#if source}}
            <img src="{{source}}" alt="Image">
        {{else}}
            {{#if temp_location}}
                <img src="{{temp_location}}" alt="Image">
            {{/if}}
        {{/if}}
    </div>
    <div class="delete">
        <button class="btn primary"><i class="ic ic_x"></i><span>Delete Image</span></button>
    </div>
    <div class="description">
        <label>Description:</label>
        <select class="image_label" data-attribute="label" name="{{image_type}}[][label]">
            <option value="">Select corresponding before image label...</option>
        </select>
    </div>
    <input type="hidden" class="image_id" name="{{image_type}}[][id]" value="{{id}}">
    <input type="hidden" class="image_temp_location" name="{{image_type}}[][temp_location]" value="{{temp_location}}">
</div>
