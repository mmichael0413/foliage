<h1 class="subheader">Create Application</h1>
<h2>Step 1 of 2</h2>
{{>upload_form}}


<form action="/program/{{programId}}/application/save" class="profile-form" method="post">
    {{> profile_image}}

    {{> basic_information}}

    {{> university}}

    <div class="card">
        <div class="header">Residential Address</div>
        <div class="body compressed">
            <label>Where you currently live?</label>
            <input type="text" class="low-margin" name="residentialAddress.city" placeholder="City"
                   value="{{person.residentialAddress.city}}" data-rule-required="true"/>
            <select name="residentialAddress.state" data-rule-required="true">
                <option value="">Select State/Province</option>
                {{#each states}}
                    {{#select ../person.residentialAddress.state}}
                        <option value="{{this.abbr}}">{{this.name}}</option>
                    {{/select}}
                {{/each}}
            </select>
        </div>
    </div>
    {{> about_images}}

    {{> interests_input}}

    {{> owns_car}}

    <div class="card">
        <div class="body">
            <label for="heardAboutUs">How did you hear about us?</label>

            <select name="heardAboutUs" id="heardAboutUs" data-rule-required="true">
                <option value="">Select</option>
                {{#each choices}}
                    {{#select ../person.heardAboutUs}}
                        <option value="{{this}}">{{this}}</option>
                    {{/select}}
                {{/each}}

            </select>
        </div>
    </div>

    <div class="card">
        <div class="body">
            <label for="brandAmbassador">Have you been a brand ambassador or represented a brand before?</label>
            <textarea name="brandAmbassador" id="brandAmbassador" cols="30" rows="10" class="expanding-wrapper double">{{person.brandAmbassador}}</textarea>
        </div>
    </div>

    <div class="card">

        <div class="body">
            <label for="retailExperience">Do you have any experience working in retail?</label>
            <textarea name="retailExperience" id="retailExperience" cols="30" rows="10" class="expanding-wrapper double">{{person.retailExperience}}</textarea>
        </div>
    </div>

    <div class="button-row">
        <a href="#" class="btn inverse">Cancel</a>
        <input type="submit" class="btn primary submit" value="Save" data-input="false"/>
    </div>
</form>

