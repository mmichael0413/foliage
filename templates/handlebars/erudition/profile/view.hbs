{{#if canEdit}}
    <div class="action-row">
        <a href="{{#if editUrl}}{{editUrl}}{{else}}/profile/edit/{{person.id}}{{/if}}" class="light"><i
                class="ic ic_edit"></i> Edit Info</a>
    </div>
{{/if}}

<div class="page-heading">
    <div>
        <img class="user-image img-circle" onerror="this.src='/assets/user/missing.jpg'"
             src="{{person.profileImage.small}}">
    </div>
    <div>
        <h1>{{person.fullName}}</h1>
        {{universityLabel}}

        {{#if displayResidential}}
            {{person.residentialAddress.city}}, {{person.residentialAddress.state}}
        {{/if}}

        {{userLabel}}


    </div>
</div>


{{#if activityUrl}}
    <ul class="nav tabbed-nav">
        <li class="tab active"><a href="#">Profile</a></li>
        <li class="tab"><a href="{{activityUrl}}" class="">Activities</a></li>
        <li class="tab"><a href="{{storeUrl}}">Stores</a></li>
        {{#if notificationUrl}}
            <li class="tab"><a href="{{notificationUrl}}">Notification Preferences</a></li>
        {{/if}}
    </ul>
{{/if}}


<div class="card">
    <div class="header">Contact Information</div>
    <div class="body pure-g">
        <div class="col-1-4">Email:</div>
        <div class="col-3-4">{{person.email}}</div>
    </div>
    <div class="divider"></div>
    <div class="body pure-g">
        <div class="col-1-4">Phone Number:</div>
        <div class="col-3-4">{{person.phone}}</div>
    </div>
    {{#if showAllFields}}
    <div class="divider"></div>
    <div class="body pure-g">
        <div class="col-1-4">Paypal Email:</div>
        <div class="col-3-4">{{person.paypalEmail}}</div>
    </div>
    {{/if}}
</div>


<div class="card">
    <div class="header">Address</div>

    <div class="body pure-g">
        <div class="col-sm-1-1 col-1-4">Residential Address:</div>
        <div class="col-sm-1-1 col-3-4">
            {{#if displayResidential}}
                {{> address person.residentialAddress}}
            {{else}}
                Not Available
            {{/if}}
        </div>
    </div>
    <div class="divider"></div>
    <div class="body pure-g">
        <div class="col-sm-1-1 col-1-4">Shipping Address:</div>
        <div class="col-sm-1-1 col-3-4">
            {{#if displayShipping}}
                {{> address person.shippingAddress}}
            {{else}}
                Not Available
            {{/if}}
        </div>
    </div>
</div>

{{#if person.interests}}
    {{> interest_view}}
{{/if}}

{{#if showAllFields}}
<div class="card">
    <div class="header">Additional Information</div>
    <div class="body pure-g">
        <div class="col-1-4">Shirt Size:</div>
        <div class="col-3-4">
            {{#if person.shirtSize}}
                {{person.shirtSize}}
            {{else}}
                Not Available
            {{/if}}
        </div>
    </div>
    <div class="divider"></div>
    <div class="body pure-g">
        <div class="col-1-4">Shoe Size:</div>
        <div class="col-3-4">
            {{#if person.shoeSize}}
                {{person.shoeSize}}
            {{else}}
                Not Available
            {{/if}}
        </div>
    </div>
</div>
{{/if}}

{{#if_gt aboutImageCount 0}}
    <div class="card">
        <div class="body pure-g">
            <div class="col-1-5 col-sm-1-1 about-images">

                {{#each person.aboutImages}}
                    <img src="{{this.large}}" onerror="this.src='/assets/missing.jpg'"/>
                {{/each}}
            </div>
        </div>
    </div>
{{/if_gt}}