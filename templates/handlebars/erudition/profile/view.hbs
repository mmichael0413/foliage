{{#if canEdit}}
    <div class="action-row">
        <a href="{{#if editUrl}}{{editUrl}}{{else}}/profile/edit/{{person.id}}{{/if}}" class="light"><i
                class="ic ic_edit"></i> Edit Info</a>
    </div>
{{/if}}

<div class="page-heading">
    <div>
        <img class="user-image img-circle" onerror="this.src='/assets/user/missing.jpg'"
             src="{{person.profileImage.small}}">
    </div>
    <div>
        <h1>{{person.fullName}}</h1>
        {{universityLabel}}

        {{#if displayResidential}}
            {{person.residentialAddress.city}}, {{person.residentialAddress.state}}
        {{/if}}

        {{userLabel}}


    </div>
</div>


{{#if activityUrl}}
    <ul class="nav tabbed-nav">
        <li class="tab active"><a href="#">Profile</a></li>
        <li class="tab"><a href="{{activityUrl}}" class="">Activities</a></li>
        <li class="tab"><a href="{{storeUrl}}">Stores</a></li>
    </ul>
{{/if}}

