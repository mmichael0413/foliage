{{#if showAllFields}}
    <div class="card">
        <div class="header">Contact Information</div>
        <div class="body pure-g">
            <div class="col-1-4">Email:</div>
            <div class="col-3-4">{{person.email}}</div>
        </div>
        <div class="divider"></div>
        <div class="body pure-g">
            <div class="col-1-4">Phone Number:</div>
            <div class="col-3-4">{{person.phone}}</div>
        </div>
        <div class="divider"></div>
        <div class="body pure-g">
            <div class="col-1-4">Paypal Email:</div>
            <div class="col-3-4">{{person.paypalEmail}}</div>
        </div>
    </div>


    <div class="card">
        <div class="header">Address</div>

        <div class="body pure-g">
            <div class="col-sm-1-1 col-1-4">Residential Address:</div>
            <div class="col-sm-1-1 col-3-4">
                {{#if displayResidential}}
                    {{> address person.residentialAddress}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>
        <div class="divider"></div>
        <div class="body pure-g">
            <div class="col-sm-1-1 col-1-4">Shipping Address:</div>
            <div class="col-sm-1-1 col-3-4">
                {{#if displayShipping}}
                    {{> address person.shippingAddress}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>
    </div>
{{/if}}

{{#if person.interests}}
    {{> interest_view}}
{{/if}}

{{#if showAllFields}}
    <div class="card">
        <div class="header">Additional Information</div>

        {{#if showExtendedFields}}
            <div class="body pure-g">
                <div class="col-1-4">Gender:</div>
                <div class="col-3-4">
                    {{#if person.gender}}
                        {{person.gender}}
                    {{else}}
                        Not Available
                    {{/if}}
                </div>
            </div>
            <div class="divider"></div>

            <div class="body pure-g">
                <div class="col-1-4">How Did You Hear About Us?:</div>
                <div class="col-3-4">
                    {{#if person.heardAboutUs}}
                        {{person.heardAboutUs}}
                    {{else}}
                        Not Available
                    {{/if}}
                </div>
            </div>
            <div class="divider"></div>
        {{/if}}

        <div class="body pure-g">
            <div class="col-1-4">Shirt Size:</div>
            <div class="col-3-4">
                {{#if person.shirtSize}}
                    {{person.shirtSize}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>
        <div class="divider"></div>
        <div class="body pure-g">
            <div class="col-1-4">Shoe Size:</div>
            <div class="col-3-4">
                {{#if person.shoeSize}}
                    {{person.shoeSize}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>

        {{#if showExtendedFields}}
            <div class="divider"></div>
            <div class="body pure-g">
                <div class="col-1-4">Owns Car:</div>
                <div class="col-3-4">
                    {{#if person.ownsCar}}
                        {{person.ownsCar}}
                    {{else}}
                        Not Available
                    {{/if}}
                </div>
            </div>
        {{/if}}
    </div>
{{/if}}

{{#if showExtendedFields}}
    <div class="card">
        <div class="header">{{person.programName}}</div>

        <div class="body pure-g">
            <div class="col-1-4">Status:</div>
            <div class="col-3-4">
                {{#if person.status}}
                    {{person.status}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>
        <div class="divider"></div>

        <div class="body pure-g">
            <div class="col-1-4">Applied On:</div>
            <div class="col-3-4">
                {{#if person.appliedOn}}
                    {{person.appliedOn}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>
        <div class="divider"></div>

        <div class="body pure-g">
            <div class="col-1-4">Role:</div>
            <div class="col-3-4">
                {{#if person.role}}
                    {{person.role}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>
        <div class="divider"></div>

        <div class="body pure-g">
            <div class="col-1-4">Hours:</div>
            <div class="col-3-4">
                {{#if minHours}}
                    {{minHours}}
                    {{#if maxHours}}
                    - {{maxHours}}
                    {{/if}}
                {{else}}
                    {{#if maxHours}}
                        {{maxHours}}
                    {{else}}
                        Not Available
                    {{/if}}
                {{/if}}
            </div>
        </div>
        <div class="divider"></div>

        <div class="body pure-g">
            <div class="col-1-4">Relevant Experience:</div>
            <div class="col-3-4">
                {{#if person.relevantExperience}}
                    {{person.relevantExperience}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>
        <div class="divider"></div>

        <div class="body pure-g">
            <div class="col-1-4">Brands:</div>
            <div class="col-3-4">
                {{#if brand1}}
                    <div>{{brand1}}</div>
                {{/if}}
                {{#if brand2}}
                    <div>{{brand2}}</div>
                {{/if}}
                {{#if brand3}}
                    <div>{{brand3}}</div>
                {{/if}}
                {{#unless brand1}}
                    {{#unless brand2}}
                        {{#unless brand3}}
                            Not Available
                        {{/unless}}
                    {{/unless}}
                {{/unless}}
            </div>
        </div>
        <div class="divider"></div>

        <div class="body pure-g">
            <div class="col-1-4">Trends:</div>
            <div class="col-3-4">
                {{#if trend1}}
                    <div>{{trend1}}</div>
                {{/if}}
                {{#if trend2}}
                    <div>{{trend2}}</div>
                {{/if}}
                {{#if trend3}}
                    <div>{{trend3}}</div>
                {{/if}}
                {{#unless trend1}}
                    {{#unless trend2}}
                        {{#unless trend3}}
                            Not Available
                        {{/unless}}
                    {{/unless}}
                {{/unless}}
            </div>
        </div>
        <div class="divider"></div>

        <div class="body pure-g">
            <div class="col-1-4">Owns Brand Product:</div>
            <div class="col-3-4">
                {{#if person.ownsProduct}}
                    {{person.ownsProduct}}
                {{else}}
                    Not Available
                {{/if}}
            </div>
        </div>
    </div>
{{/if}}

{{#if_gt aboutImageCount 0}}
    <div class="card">
        <div class="body pure-g">
            <div class="col-1-5 col-sm-1-1 about-images">
                {{#each person.aboutImages}}
                    <img src="{{this.large}}" onerror="this.src='/assets/missing.jpg'"/>
                {{/each}}
            </div>
        </div>
    </div>
{{/if_gt}}
